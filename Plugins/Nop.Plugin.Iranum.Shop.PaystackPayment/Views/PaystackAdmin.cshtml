@{
    Layout = "_AdminLayout.cshtml";
}
@model Nop.Plugin.Iranum.Shop.PaystackPayment.Models.ConfigurationModel
@using Nop.Plugin.Iranum.Shop.PaystackPayment.Models;
@using Nop.Web.Framework;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
        </div>
    </div>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.Webhook)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.Webhook)
                        @Html.ValidationMessageFor(model => model.Webhook)
                    </div>
                </div>
                </div>
                
            </div>
        </div>
    
    

}